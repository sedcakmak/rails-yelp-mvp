<div class="p-5">

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>
</div>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <strong>Rating:</strong><%= review.rating %>
    <%= link_to "Delete Review", review_path(review), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %></li>
  <% end %>
</ul>

<br>

<div class="p-1">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content, placeholder: "Write your comment here" %>
      <%= f.input :rating, placeholder: "Write a number between 0 and 5 please" %>
      <%= f.submit class: 'btn btn-outline-success btn-sm'%>
  <% end %>
</div>

<div class="p-1">
<%= link_to 'Back To Restaurants', restaurants_path, class: 'btn btn-link' %>
</div>
